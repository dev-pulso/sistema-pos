###############################################
# BACKEND - PRODUCTION ENVIRONMENT (Docker)
###############################################

NODE_ENV=production
PORT=4000

###############################################
# DATABASE (PostgreSQL en Docker)
###############################################
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=sistema_pos

###############################################
# JWT TOKENS
###############################################
JWT_SECRET=sistema-pos-access-secret-2025
JWT_REFRESH_SECRET=sistema-pos-refresh-secret-2025
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

###############################################
# TYPEORM / DATABASE OPTIONS (SEGURIDAD)
###############################################
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=false

###############################################
# CORS (Proteger API)
###############################################
# Puedes permitir solo el dominio del frontend (ej: dominio final)
CORS_ORIGIN=http://localhost:3000

###############################################
# LOGGING
###############################################
# production | debug | error | warn | verbose
LOG_LEVEL=production

###############################################
# BACKEND PUBLIC URL (Ãºtil para frontends o microservicios)
###############################################
API_BASE_URL=http://backend:4000
